<%= form_for(@participant) do |f| %>
	<% if @participant.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

			<ul>
			<% @participant.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<br>
	<div class="field">
		<%= f.label :age %>
		<%= f.number_field :age %>
	</div>
	<br>
	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<br>
	<div class="field">
		<%= f.label "Do you have color perception problems?" %>
		<%= f.select :perception, ["No", "Yes"] %>
	</div>
	<br>
	<div class="field">
		<%= f.label "Do you have synesthesia?" %>
		<%= f.select :synesthesia, ["No", "Yes"] %>
	</div>
	<br>
	<div class="field">
		<%= f.label "Do you have any color blindness?" %>
		<%= f.select :blindness, ["No", "Yes"] %>
	</div>
	<br>
	<button type="submit" class="btn btn-success"> Save </button>
<% end %>
