<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
		<b>Name:</b>
		<%= @participant.name %>
	</p>

	<p>
		<b>Age:</b>
		<%= @participant.age %>
	</p>

	<p>
		<b>Email:</b>
		<%= @participant.email %>
	</p>

	<p>
		<b>Perception Problems?:</b>
		<%= @participant.perception %>
	</p>

	<p>
		<b>Synesthesia?:</b>
		<%= @participant.synesthesia %>
	</p>

	<p>
		<b>Color Blindness?:</b>
		<%= @participant.blindness %>
	</p>


	<% if @participant.test_taken and @participant.surveyed %>
		<%= render 'stroopreulsts' %>
	<% elsif @participant.test_taken and not @participant.surveyed %>
		<%= link_to "Take Post Test Survey", participant_survey_path(@participant) %>
	<% else %>
		<%= link_to "Take Stroop Test", test_index_path(@participant) %>
	<% end %>

	<br>
	<br>
	<br>


	<%= link_to 'Edit', edit_participant_path(@participant) %> |
	<%= link_to 'Back', participants_path %>
</div>
